{
  "name": "end-to-end-task",
  "version": "1.0.0",
  "description": "E2E tests for Realworld app",
  "main": "index.js",
  "scripts": {
    "test": "node -r ts-node/register tests/index.ts",
    "test:headless": "HEADLESS=true node -r ts-node/register tests/index.ts",
    "test:fast": "HEADLESS=true SLOWMO=0 node -r ts-node/register tests/index.ts",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "screenshots": "mkdir -p screenshots"
  },
  "keywords": [
    "e2e",
    "testing",
    "puppeteer"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "puppeteer": "^24.32.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
